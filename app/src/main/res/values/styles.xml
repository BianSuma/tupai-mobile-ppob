<resources>

    <style name="PpobTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/label_blue_guide</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">533dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <!--<style name="AppTheme" parent="android:Theme.Holo.Light">-->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:buttonStyle">@style/AppButton</item>
    </style>
    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#696fa5</item>
        <item name="android:titleTextStyle">@style/AppActionBarText</item>
    </style>

    <style name="AppActionBarText"
        parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BgTransparent" parent="AppThemeNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        <item name="android:windowBackground">#FAEA99</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppButton">
        <item name="android:typeface">sans</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_common</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="LabelWarn">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="LabelWarnCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="ButtonFacebook">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_facebook</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonRed">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonText">
        <item name="android:paddingTop">@dimen/layout_content_pad</item>
        <item name="android:paddingBottom">@dimen/layout_content_pad</item>
        <item name="android:textColor">@color/labelButton</item>
        <item name="android:background">@drawable/bg_btn_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LabelGuide">
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:background">@drawable/bg_label_guide</item>
        <item name="android:padding">@dimen/layout_content_pad</item>
    </style>

    <style name="LayoutEmbossShadow">
        <item name="android:padding">13dp</item>
        <!--<item name="android:background">@drawable/bg_layout_bordershadow</item>-->
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

    <style name="SSPStatusGreen">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_label_sspstatus_green</item>
    </style>

    <style name="SSPStatusPink">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_label_sspstatus_pink</item>
    </style>

    <style name="MainTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SSPDetailUnfinishTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="CategoryLabelBarHead">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/label_blue_guide</item>
        <item name="android:padding">@dimen/layout_content_pad</item>
    </style>

    <style name="CategoryLabelBar">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/label_blue_guide</item>
        <item name="android:background">#ebf1f9</item>
        <item name="android:padding">@dimen/layout_content_pad</item>
    </style>

    <style name="ConfirmDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/label_blue_guide</item>
    </style>

    <style name="FieldLbl">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="FieldVal">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
