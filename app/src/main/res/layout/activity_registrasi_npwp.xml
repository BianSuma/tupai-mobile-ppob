<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_edit_wp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistrasiNpwpActivity">

<!--    <com.pajakku.tupaimobile.component.AppActionBar-->
<!--        android:id="@+id/registrasinpwp_actionbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="?attr/actionBarSize"-->
<!--        app:title="Refund"-->
<!--        />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registrasinpwp_lay_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/bg_actionbar_main"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!-- LEFT BUTTON -->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/registrasinpwp_btn_actionbar_left"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:background="@drawable/bg_highlight_common"
            android:padding="@dimen/gap14"
            android:src="@drawable/ic_actionbar_leftarrow_normal"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/registrasinpwp_lbl_actionbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Permohonan Daftar NPWP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/registrasinpwp_btn_actionbar_right"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:background="@drawable/bg_highlight_common"
            android:padding="@dimen/gap14"
            android:src="@drawable/ic_actionbar_next"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pajakku.tupaimobile.component.AppViewPager
        android:id="@+id/registrasinpwp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/registrasinpwp_lay_actionbar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
