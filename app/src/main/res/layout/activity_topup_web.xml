<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_topup_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pajakku.tupaimobile.activity.TopupWebActivity">

    <com.pajakku.tupaimobile.component.AppActionBar
        android:id="@+id/topupweb_appactionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/topupweb_page_title"
        />

    <WebView
        android:id="@+id/topupweb_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topupweb_appactionbar"
        />

    <ProgressBar
        android:id="@+id/topupweb_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topupweb_appactionbar"
        android:indeterminate="true"
        />

</RelativeLayout>
