<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/gap14"
    android:paddingLeft="@dimen/gap14"
    android:paddingRight="@dimen/gap14"
    android:background="@drawable/bg_highlight_common"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rowcommon1val_lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/gap14"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/rowcommon1val_lbl_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>