<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pajakku.tupaimobile.activity.FrontActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/login_img_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_front_img_height"
            android:contentDescription="@string/global_img_desc"
            android:src="@drawable/logo_and_label"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/login_label_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/login_img_title"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="@color/label_blue_guide"
            android:text="@string/welcome_label_subtitle"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/login_label_subtitle"
            android:layout_centerHorizontal="true"
            android:columnCount="2"
            android:rowCount="2">
            <Button
                android:id="@+id/front_btn_signup"
                style="@style/AppButton"
                android:layout_width="@dimen/front_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:text="@string/welcome_btn_signup"
                />
            <Button
                android:id="@+id/front_btn_login"
                style="@style/AppButton"
                android:layout_width="@dimen/front_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:text="@string/welcome_btn_login"
                />
            <Button
                android:id="@+id/front_btn_facebook"
                style="@style/ButtonFacebook"
                android:layout_width="@dimen/front_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="5dp"
                android:text="@string/welcome_btn_facebook"
                android:drawableLeft="@drawable/ic_white_facebook"
                />
            <Button
                android:id="@+id/front_btn_google"
                style="@style/ButtonRed"
                android:layout_width="@dimen/front_btn_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="5dp"
                android:text="@string/welcome_btn_google"
                android:drawableLeft="@drawable/ic_white_red"
                />
        </GridLayout>

    </RelativeLayout>

</RelativeLayout>
